{
  "name": "Steam Tracking Price",
  "version": "1.0",
  "description": "Helps you track the price of a game on Steam",
  "permissions": ["declarativeContent"],
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo/steam-16.png",
      "32": "images/logo/steam-32.png",
      "48": "images/logo/steam-48.png",
      "128": "images/logo/steam-128.png"
    }
  },
  "icons": {
    "16": "images/logo/steam-16.png",
    "32": "images/logo/steam-32.png",
    "48": "images/logo/steam-48.png",
    "128": "images/logo/steam-128.png"
  }
}
